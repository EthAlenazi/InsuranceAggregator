@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>
<form asp-action="Register" method="post" role="form">
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email:</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Password:</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label">Confirm Password:</label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<p class="d-inline">You have an account! Please login now <a class="btn-secondary nav-link" asp-controller="Account" asp-action="Login">Login</a></p>
